<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/schildkroete_koffer" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mouse_memoirs"
        android:text="Vacay - Count Down"
        android:textAlignment="center"
        android:textColor="#534F4F"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <TextView
        android:id="@+id/currentNumberOfDays_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/mouse_memoirs"
        android:text="26"
        android:textColor="#6A6465"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/title_text"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toStartOf="@+id/title_text"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />

    <TextView
        android:id="@+id/countedContent_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mouse_memoirs"
        android:text="days"
        android:textColor="#6A6465"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="@+id/currentNumberOfDays_text"
        app:layout_constraintEnd_toEndOf="@+id/title_text"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toEndOf="@+id/currentNumberOfDays_text"
        app:layout_constraintTop_toTopOf="@+id/currentNumberOfDays_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="220dp"
        android:layout_height="130dp"
        android:layout_marginTop="292dp"
        android:backgroundTint="#8F8788"
        android:fontFamily="@font/mouse_memoirs"
        android:rotation="6"
        android:text="another day has passed"
        android:textColor="#D9DDE7"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/countedContent_text"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="@+id/currentNumberOfDays_text"
        app:layout_constraintTop_toBottomOf="@+id/currentNumberOfDays_text" />

</androidx.constraintlayout.widget.ConstraintLayout>